INICIO
INTEIRO i
TEXTO NOME1[15]
ESCREVER "DIGITE SEU NOME"
LER NOME1

INTEIRO j
INTEIRO NUMERO1
ESCREVER "DIGITE UMA IDADE"
LER NUMERO1

i <- 1
ENQUANTO i < 15 FAZ
ESCREVER "DIGITE UMA IDADE:", i
LER NOME1[i]
i <-i + 1
FIMENQUANTO

j <- 1
ENQUANTO j < 15 FAZ
ESCREVER "DIGITE UMA IDADE:", j
LER NUMERO1[j]
j <- j + 1
FIMENQUANTO

FIM
